%h1 Dashboard

%h2 Pages
%table
  %thead
    %tr
      %th Title
      %th Slug
      %th
  %tbody
    - @pages.each do |page|
      %tr
        %td= page.title
        %td= page.slug
        %td= link_to "Edit", edit_admin_page_path(page)

%h2 Projects
%p= link_to "New project", new_admin_project_path
%table
  %thead
    %tr
      %th Title
      %th Date
      %th
  %tbody
    - @projects.each do |project|
      %tr
        %td= project.title
        %td= project.project_date&.strftime("%B %Y")
        %td
          = link_to "Edit", edit_admin_project_path(project)
          = button_to "Delete", admin_project_path(project), method: :delete
