= form_with(model: [:admin, page]) do |f|
  - if page.errors.any?
    .errors
      %ul
        - page.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body, rows: 20
  .actions
    = f.submit "Save"
